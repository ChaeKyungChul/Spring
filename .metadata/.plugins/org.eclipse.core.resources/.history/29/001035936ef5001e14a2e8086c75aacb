package ch01.diproject;

import ch01.diproject.entity.Exam;
import ch01.diproject.ui.ExamView;

public class ExamKorView implements ExamView {

	private Exam exam;
	
	public ExamKorView(Exam exam) {
		this.exam = exam;
	}

	@Override
	public void print() {
		System.out.printf("당신의 교과성적입니다. - 총점 %d, 평균 %f \n", exam.total(), exam.avg());
	}

}
